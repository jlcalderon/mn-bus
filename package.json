{
  "name": "mn-bus",
  "version": "1.0.0",
  "description": "Application that tells you the bus stops for a given route and direction of the Minnesota Metro Transit Transportation",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "cd client && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlcalderon/mn-bus.git"
  },
  "keywords": [
    "Bus",
    "Transportation",
    "Minnesota"
  ],
  "author": "Jorge Calderon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlcalderon/mn-bus/issues"
  },
  "homepage": "https://github.com/jlcalderon/mn-bus#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7"
  }
}
